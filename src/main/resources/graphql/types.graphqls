enum BoardType {
    ARRIVALS, DEPARTURES
}

enum FlightState {
    LANDED, READY_FOR_TAKE_OFF, BOARDING, CANCELLED, DELAYED, IN_TIME, ARRIVING
}

type Passenger {
    id: ID!
    name: String!
}

type Flight {
    id: ID!
    start: String!
    destination: String!
    arrival: String!
    departure: String!
    status: FlightState!
    passengers: [Passenger!]!
}

type Board {
    type: BoardType!
    title: String!
    flights(states: [FlightState!]): [Flight!]!
}
